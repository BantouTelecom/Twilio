- title "Search"
%ul{:id => @title, :title => @title, :selected => "true"}
  %li
    - form_for :search, :url => '/iphone/search' do |f|
      = f.label :sex
      = f.select :sex, [['Male', 'Male'], ['Female','Female']]
      = f.label "Dog or Cat"
      = f.select :dog_or_cat, [['Dog', 'Dog'], ['Cat','Cat']]
      = f.label "Lost or Found"
      = f.select :lost_or_found, [['Lost', 'Lost'], ['Found','Found']]
      = f.label "Zip"
      = f.text_field :zip, :size => 5
      %br/
      = f.submit "Start Search"
  - if @pets
    = render :partial => 'pets'